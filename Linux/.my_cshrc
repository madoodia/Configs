setappgroup default

if !($?prompt) exit

# ---------------------- madoodia aliases --------------------- #
# Colors!
set red="%{\033[1;31m%}"
set green="%{\033[0;32m%}"
set yellow="%{\033[1;33m%}"
set blue="%{\033[1;34m%}"
set magenta="%{\033[1;35m%}"
set cyan="%{\033[1;36m%}"
set white="%{\033[0;37m%}"
set end="%{\033[0m%}" # This is needed at the end... :(
set prompt="[${green}%B%n%b${white}@%B%m%b]-[${yellow}%B%/%b]-[%Y-%W-%D][%T]\n%B$ "

# =---------------- aliases --------------= #
alias code '~/bin/vscode/bin/code'

alias rezacode 'cd ~ && code .'
alias la 'll -a --color=auto'
alias ho 'cd ~'
alias clr 'clear'

# Clean up after ourselves...
unset red green yellow blue magenta cyan white end

# Set Maya popup windows on top
setenv MAYA_SET_PARENT_HINT 1

# ---------------------- madoodia aliases --------------------- #

# end of file