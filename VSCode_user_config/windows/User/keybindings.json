  // },
  {
    "key": "shift+alt+f",
    "command": "editor.action.formatDocument",
    "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
  },
  {
    "key": "ctrl+shift+a",
    "command": "workbench.view.extension.codemap-explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "ctrl+shift+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "ctrl+shift+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "ctrl+alt+shift+r",
    "command": "workbench.action.reopenWithEditor"
  },
  {
    "key": "ctrl+;",
    "command": "workbench.action.quickOpen",
    "args": "@:"
  },
  {
    "key": "ctrl+'",
    "command": "workbench.action.quickOpen",
    "args": "#"
  },
  {
    "key": "ctrl+alt+shift+i",
    "command": "editor.action.inspectTMScopes"
  },
  {
    "key": "ctrl+down", // Shortcut to jump down 5 lines (customize this)
    "command": "cursorMove",
    "when": "editorTextFocus",
    "args": {
      "to": "down",
      "by": "line",
      "value": 10 // Number of lines to jump
    }
  },
  {
    "key": "ctrl+up", // Shortcut to jump up 5 lines (customize this)
    "command": "cursorMove",
    "when": "editorTextFocus",
    "args": {
      "to": "up",
      "by": "line",
      "value": 10 // Number of lines to jump
    }
  },
  {
    "key": "ctrl+alt+right", // Customize this shortcut
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+left", // Customize this shortcut
    "command": "editor.action.jumpToBracket",
    "when": "editorTextFocus"
  },
