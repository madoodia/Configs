{
  "workbench.colorTheme": "madoodia (Visual Studio Dark)",
  // "workbench.panel.opensMaximized": "always",
  "window.newWindowDimensions": "maximized",
  "files.autoSave": "onFocusChange",
  "cmake.configureOnOpen": false,
  "editor.inlineSuggest.enabled": true,
  "editor.detectIndentation": true,
  "editor.insertSpaces": false,
  "editor.useTabStops": true,
  "C_Cpp.clang_format_path": "",
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.autocomplete": "default",
  "C_Cpp.intelliSenseEngine": "default",
  "C_Cpp.exclusionPolicy": "checkFilesAndFolders",
  "C_Cpp.intelliSenseEngineFallback": "enabled",
  "C_Cpp.dimInactiveRegions": true,
  "[cpp]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "[c]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false,
    "yaml": false,
    "jsonc": false
  },
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "liveServer.settings.donotShowInfoMsg": true,
  "terminal.integrated.scrollback": 10000,
  "[python]": {
    "editor.formatOnType": true
  },
  "C_Cpp.intelliSenseCacheSize": 51200,
  "gitlens.hovers.currentLine.over": "line",
  "debug.onTaskErrors": "abort",
  "git.enableSmartCommit": true,
  "cmake.showOptionsMovedNotification": false,
  "terminal.integrated.fontSize": 16,
  "editor.fontFamily": "'Cascadia mono', 'Inconsolata for Powerline', LiberationMono, Consolas, 'Courier New', monospace",
  "github.copilot.editor.enableAutoCompletions": true,
  "security.workspace.trust.untrustedFiles": "open",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "c": "cpp"
  },
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "red",
      "backgroundColor": "transparent"
    },
    {
      "text": "FIXME:",
      "color": "lightgreen",
      "backgroundColor": "transparent"
    },
    {
      "text": "IMPORTANT:",
      "color": "yellow",
      "backgroundColor": "transparent"
    },
    {
      "text": "NOTE:",
      "color": "#00d7dd",
      "backgroundColor": "transparent"
    },
    {
      "text": "ERROR:",
      "color": "white",
      "backgroundColor": "#990000ff"
    }
  ],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment.line", // This matches all comments
        "settings": {
          "foreground": "#6A9955" // Set default comment color (green)
        }
      },
      {
        "scope": "comment.block",
        "settings": {
          "foreground": "#6A9955" // Set default comment color (green)
        }
      }
    ]
  },
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "blink",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#0dc900",
    "editor.lineHighlightBackground": "#ffffff24"
  },
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "diffEditor.ignoreTrimWhitespace": false
  },
  "makefile.configureOnOpen": true,
  // "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
  //   "cppcoreguidelines-avoid-magic-numbers"
  // ],
  "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy.exe",
  "C_Cpp.codeAnalysis.clangTidy.config": "${workspaceFolder}/.clang-tidy",
  "terminal.integrated.suggest.enabled": true
}
