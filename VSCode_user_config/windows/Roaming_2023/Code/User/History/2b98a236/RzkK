#include <iostream>

class MyString
{
public:
  MyString(const char* str = "")
  {
    m_size = strlen(str);
    m_data = new char[m_size + 1];
    strcpy(m_data, str);
  }

  ~MyString()
  {
    delete[] m_data;
  }

private:
  char* m_data;
  size_t m_size;
};