{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "windows": {
        "command": "${workspaceFolder}/build.bat"
      },
      "linux": {
        "command": "${workspaceFolder}/build.sh"
      },
      "osx": {
        "command": "${workspaceFolder}/build.sh"
      },
      "args": [
        "${workspaceFolder}",
        "${relativeFileDirname}",
        "${fileBasenameNoExtension}",
        "${relativeFileDirname}",
        "${fileDirname}"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "run",
      "windows": {
        "command": "${workspaceFolder}\\deploy\\Zolf.exe"
      },
      "linux": {
        "command": "${workspaceFolder}\\deploy\\Zolf"
      },
      "problemMatcher": []
    },
  ]
}

